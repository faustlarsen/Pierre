@{
  Layout = "_Layout";
}

@using Pierre.ViewModels
@model LoginViewModel

<h2>Log in with your account</h2>

@using (Html.BeginForm())
{
    @Html.TextBoxFor(m => m.Email)
    @Html.LabelFor(m => m.Email, new { @required = "required" })
    
    <br>
    @Html.PasswordFor(m => m.Password)
    @Html.LabelFor(m => m.Password, new { @required = "required" })
    
    <input class="btn btn-warning" type="submit" value="Log in" class="btn btn-default" />
}