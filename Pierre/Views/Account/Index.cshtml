@{
    Layout = "_Layout";
}

<h2>Authentication with Identity</h2>
<div class="container card">
    @if (User.Identity.IsAuthenticated)
    {
        <p>Welcome! @User.Identity.Name!</p>
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input class="btn btn-warning" type="submit" class="btn btn-default" value="Log out" />
        }
    }
    else
    {
        <input class="btn btn-warning" type="button" value="Register" onclick='location.href="@Url.Action("Register")";' />
        <input class="btn btn-warning" type="button" value="Log in" onclick='location.href="@Url.Action("Login")";' />
    }

    <input class="btn btn-warning" type="button" value="Home" onclick='location.href="@Url.Action("Index", "Home")";' />
</div>