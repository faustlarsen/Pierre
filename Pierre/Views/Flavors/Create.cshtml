@{
  Layout = "_Layout";
}

@model Pierre.Models.Flavor
<div class="container card">
    <h4>Add New Flavor</h4>
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.FlavorName)
        @Html.TextBoxFor(model => model.FlavorName)
        <input class="btn btn-warning" type="submit" value="Add New Flavor" />
    }
    <input class="btn btn-warning" type="button" value="Flavors" onclick='location.href="@Url.Action("Index", "Flavors")";' />
</div>