@{
  Layout = "_Layout";
}

@using Pierre.Models;
@model List<Pierre.Models.Flavor>;
<div class="container card">
    <h1>Flavors</h1>

    @if (@Model.Count == 0)
    {
        <h3>No flavors have been added yet!</h3>
    } 

    @foreach (Flavor flavor in Model)
    {
        <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
    }
    <input class="btn btn-warning" type="button" value="Add New Flavor" onclick='location.href="@Url.Action("Create", "Flavors")";' />
    <input class="btn btn-warning" type="button" value="Home" onclick='location.href="@Url.Action("Index", "Home")";' />
</div>